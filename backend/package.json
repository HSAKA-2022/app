{
    "name": "backend",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "lint": "eslint --cache --max-warnings=0 . && prettier -c .",
        "lint:fix": "eslint --cache --fix --max-warnings=0 . && prettier --write .",
        "test": "ava",
        "start:direct": "node --loader ts-node/esm ./src/main.ts",
        "start": "nodemon"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@koa/cors": "^3.3.0",
        "@koa/router": "^11.0.1",
        "koa": "^2.13.4",
        "koa-bodyparser": "^4.3.0",
        "mongodb": "^4.8.0",
        "nodemon": "^2.0.19",
        "ts-node": "^10.9.1",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@ava/typescript": "^3.0.1",
        "@types/koa": "^2.13.5",
        "ava": "^4.3.1",
        "supertest": "^6.2.4"
    },
    "nodemonConfig": {
        "ext": "js,ts",
        "watch": [
            "src"
        ],
        "exec": "npm run start:direct"
    },
    "ava": {
        "files": [
            "src/**/*.test.ts",
            "src/**/*.test.tsx"
        ],
        "extensions": {
            "ts": "module",
            "tsx": "module"
        },
        "nodeArguments": [
            "--loader=ts-node/esm"
        ],
        "timeout": "2m"
    }
}
